{
  "constant": {},
  "dataLoads": [],
  "templates": [],
  "elements": [],
  "groups": [
    {
      "id": "q-question-bank-login",
      "elements": [{
        "id": "q-question-bank-login-from",
        "type": "SYSTEM.FROM",
        "items": [
          {
            "fieldKey": "username",
            "fieldName": "用户名",
            "element": {
              "type": "SYSTEM.INPUT",
              "key": "username",
              "inputType": "TEXT"
            }
          },
          {
            "fieldKey": "password",
            "fieldName": "密码",
            "element": {
              "type": "SYSTEM.INPUT",
              "key": "password",
              "inputType": "PASSWORD"
            }
          },
          {
            "element": {
              "type": "SYSTEM.BUTTON",
              "items": [
                {
                  "type": "normal",
                  "size": 4,
                  "text": "登陆",
                  "triggers": [{
                    "event": "click",
                    "type": "CALL_FLOW",
                    "url": "/flow/user/login",
                    "mode": "POST",
                    "localStorageKey": "user_token",
                    "params": {
                      "username": "#{$e.q-question-bank-login-from.username}",
                      "password": "#{$e.q-question-bank-login-from.password}"
                    },
                    "success": {
                      "type": "SYSTEM.WINDOW",
                      "title": "成功",
                      "body": {
                        "elements": [{
                          "type": "SYSTEM.TEXT",
                          "lines": [{ "text": "登录成功！" }]
                        },{
                          "type": "SYSTEM.BUTTON",
                          "items": [{
                            "type": "normal",
                            "size": 4,
                            "text": "确定",
                            "triggers": [{ "event": "click", "type": "SKIP", "url": "/page/home" }]
                          }]
                        }]
                      }
                    },
                    "fail": {
                      "type": "SYSTEM.WINDOW",
                      "title": "失败",
                      "body": {
                        "elements": [{
                          "type": "SYSTEM.TEXT",
                          "lines": [
                            { "text": "登录失败" },
                            { "text": "【#{showMsg}】" }
                          ]
                        }]
                      }
                    }
                  }]
                }
              ]
            }
          }
        ]
      }]
    }
  ],
  "pages": {
    "login": {
      "metas": [],
      "links": [],
      "groupIds": ["q-question-bank-login"],
      "modules": [
        {
          "key": "content",
          "id": "element_content",
          "classes": "col-md-12",
          "defaultShowGroupId": "q-question-bank-login",
          "style": "padding:10px;margin-top:100px;margin-left:35%;margin-right:35%;width:30%;min-width:350px;background-color:#f0f0f0;"
        }
      ],
      "scripts": []
    }
  }
}